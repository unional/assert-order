{
  "name": "assertron",
  "description": "A supplementary assertion library",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist",
    "dist-es5",
    "dist-es2015",
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5 && npm run build-es2015",
    "build-es5": "tsc -p tsconfig.es5.json",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "clean": "rimraf dist dist-es5 && rimraf dist-es2015",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev -i perf_hooks",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "npm run clean && tsc && ava",
    "verify": "npm run lint && npm run coverage && npm run build && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/assertron.git"
  },
  "bugs": {
    "url": "https://github.com/unional/assertron/issues"
  },
  "homepage": "https://github.com/unional/assertron",
  "ava": {
    "failWithoutAssertions": false,
    "files": [
      "dist-es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist-es5/**/*.js",
      "*.json"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "devDependencies": {
    "@types/node": "^9.4.0",
    "ava": "^0.25.0",
    "dependency-check": "^3.0.0",
    "eslint": "^4.16.0",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^12.4.1",
    "tslint": "^5.9.1",
    "tslint-config-unional": "^0.9.0",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "is-promise": "^2.1.0",
    "path-equal": "^1.0.0",
    "satisfier": "^4.1.1",
    "tersify": "^1.2.2"
  }
}
